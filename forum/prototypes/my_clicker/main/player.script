local cursor      = require("in.cursor")


function init(self)
    -- Сохраняем исходный масштаб
    self.original_scale = go.get_scale("#")
end

function on_message(self, message_id, message, sender)
    if message_id == cursor.CLICKED then
		go.animate(".", "scale", go.PLAYBACK_ONCE_PINGPONG, 1.5, go.PLAYBACK_ONCE_PINGPONG, 0.1)
    end
end
